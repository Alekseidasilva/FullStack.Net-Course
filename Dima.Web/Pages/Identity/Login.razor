@page "/login"
@using System.ComponentModel.DataAnnotations
@layout HeadLessLayout

<PageTitle>Dima - Login</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="6" xxl="6">
        <MudPaper Class="mud-width-full pa-8">
            <div class="d-flex Justify-Center pb-8 pt-8">
                <img src="imgs/dima.png"
                     alt="Dima - Controle Financeiro"
                     width="200" />
            </div>
            <h1>Autentica-se</h1>
            <MudForm @ref="_mudForm">
                <MudTextField T="string"
                              Label="email"
                              InputType="InputType.Email"
                              Required="true"
                              RequiredError="Informe o Email"
                              Validation="@(new EmailAddressAttribute { ErrorMessage="Email invalido" })" />

                <MudTextField T="string"
                              Label="Senha"
                              InputType="InputType.Password"
                              Placeholder="Senha"
                              Required="true"
                              RequiredError="senha Invalida" />
            </MudForm>
            <div class="d-flex Justify-Center mt-8">
                <MudButton Variant="Variant.Filled" Color=Color.Primary>Entrar</MudButton>
                <MudSpacer />
                <MudButton Href="/comecar">Registrar</MudButton>
            </div>

        </MudPaper>

    </MudItem>

</MudGrid>
@code
{
    MudForm? _mudForm;

}
